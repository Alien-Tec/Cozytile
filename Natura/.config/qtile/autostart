#!/bin/bash
# Autostart script for qtile window manager

# Set the layout for the 3 large terminals
qtile-cmd spawn --terminal --layout=monadtall &
qtile-cmd spawn --terminal --layout=monadtall &
qtile-cmd spawn --terminal --layout=monadtall &

# Set the layout for the small terminal in the corner
qtile-cmd spawn --terminal --position=bottomright --width=100 --height=100 &

# Wait a few seconds to ensure all terminals have opened before continuing
sleep 3

