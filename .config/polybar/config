[module/time]
type = internal/date
interval = 60

format = <label>
format-background = ${xrdb:color2}
format-foreground = ${xrdb:color7}

date = 󰥔 %H:%M%{F-}
time-alt = 󰃭 %a, %b %d%{F-}

label = %date%%time%

[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = <label>
format-prefix = "﬙ " 
label = %output% MB
label-padding = 1
format-prefix-foreground = ${xrdb:color7}
click-left = st -e htop

[module/powermenu]
type = custom/text 
