[module/xwindow]
type = internal/xwindow
format = <label>
format-background = #2A2E36
format-foreground = #FFFFFF
format-padding = 4

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = #707880

[module/spotify]
type = custom/script
exec = ~/.config/polybar/scripts/spotify-module display-song
exec-if = playerctl --list-all | grep "spotify"
tail = true

format = "%{T2}♫ %{T-}<label>"
label-foreground = ${xrdb:color7}
format-background = ${xrdb:color2}
format-foreground = ${xrdb:color7}



click-left   = playerctl --player=spotify play-pause &
click-right  = playerctl --player=spotify next &
click-middle = playerctl --player=spotify previous &

scroll-up   = ~/.config/polybar/scripts/spotify-module change-volume up &
scroll-down = ~/.config/polybar/scripts/spotify-module change-volume down & 

[module/mod]
type = internal/bspwm

